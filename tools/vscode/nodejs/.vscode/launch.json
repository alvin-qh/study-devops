    "version": "0.2.0",
    "configurations": [
    
        {
            "type": "node",
            "request": "launch",
            "name": "Run current file",
            "program": "${file}",
            "cwd": "${cwd}"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Test current file",
            "program": "${workspaceFolder}/node_modules/.bin/mocha",
            "args": [
                "-u", "bdd",
                "--timeout", "99999",
                "--colors", "--recursive",
                "${file}"
            ],
            "cwd": "${cwd}"
        }
    ]
}