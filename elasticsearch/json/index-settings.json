{
    "similarity": {
        "default": {
            "type": "BM25"
        },
        "arrays": {
            "type": "BM25",
            "b": "0.3",
            "k1": "1.2"
        }
    },
    "analysis": {
        "filter": {
            "lowercase": {
                "type": "lowercase"
            },
            "icu_normalizer": {
                "name": "nfkc_cf",
                "type": "icu_normalizer"
            },
            "smartcn_stop": {
                "type": "stop",
                "stopwords": [
                    "，",
                    ",",
                    ".",
                    "。"
                ]
            }
        },
        "char_filter": {
            "tsconvert": {
                "convert_type": "t2s",
                "type": "stconvert",
                "keep_both": "false",
                "delimiter": "#"
            },
            "word_break_helper_source_text": {
                "type": "mapping",
                "mappings": [
                    "_=>\\u0020",
                    ".=>\\u0020",
                    "(=>\\u0020",
                    ")=>\\u0020",
                    ":=>\\u0020"
                ]
            }
        }
    },
    "analyzer": {
        "plain": {
            "filter": [
                "smartcn_stop",
                "icu_normalizer"
            ]
        }
    }
}